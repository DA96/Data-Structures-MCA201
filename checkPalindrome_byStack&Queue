// Program to check if a string is a palindrome or not using STL stack and STL queue

#include<iostream>
#include<string>

#include<stack>
#include<queue>

using namespace std;

bool isPalindrome(string str)
{
    stack<char> s;
    queue<char> q;

    for(int i=0; i<str.length(); i++)
    {
        s.push(str[i]);
        q.push(str[i]);
    }

    int flag;
    int str_halfLen = str.length()/2;

    while(str_halfLen != 0)
    {
        if(s.top() == q.front())
            flag = 1;
        else
        {
            flag = 0;
            break;
        }

        s.pop();
        q.pop();
        str_halfLen--;
    }

    if(flag == 1)
        return true;
    else
        return false;
}


int main()
{
    cout<<"Enter string : ";
    string str;
    cin>>str;

    if(isPalindrome(str))
        cout<<endl<<str<<" is a Palindrome ";
    else
        cout<<endl<<str<<" is Not a Palindrome ";

    return 0;
}
